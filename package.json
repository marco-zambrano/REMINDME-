{
  "name": "remindme",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --no-watch --code-coverage",
    "docker:build": "docker build -t remindme-app .",
    "docker:run": "docker run -p 8080:8080 -e SUPABASE_URL=$SUPABASE_URL -e SUPABASE_KEY=$SUPABASE_KEY remindme-app",
    "gcloud:build": "gcloud builds submit --tag gcr.io/PROJECT_ID/remindme",
    "gcloud:deploy": "gcloud run deploy remindme --image gcr.io/PROJECT_ID/remindme --platform managed --region us-central1 --allow-unauthenticated"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "20.3.11",
    "@angular/compiler": "20.3.11",
    "@angular/core": "20.3.11",
    "@angular/forms": "20.3.11",
    "@angular/platform-browser": "20.3.11",
    "@angular/router": "20.3.11",
    "@angular/service-worker": "20.3.11",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@supabase/supabase-js": "^2.81.0",
    "@tailwindcss/postcss": "^4.1.17",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.17",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "20.3.9",
    "@angular/cli": "20.3.9",
    "@angular/compiler-cli": "20.3.11",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
